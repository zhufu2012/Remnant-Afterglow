	%% 该字段处理好后，删除Type、Parameter字段
	pushConditions,
	%% 限制时间，限定时间内推送(包括该时间)
	%% {参数1，参数2}
	%% 参数1：服务器时间几点开始（从0点开始计算秒）
	%% 参数2：服务器时间几点结束
	%% （从0点开始计算秒）
	%% 参数3：玩家离线多久后不推送（单位：小时）
	time,
	%% 多少小时内推送1次
	%% ·配置：小时
	%% ·配置0：表示无此限制.
	time2,
	%% 限制等级，玩家等于或大于该等级才推送
	grade,
	%% 推送标题
	title,
	%% 推送内容
	describe,
	%% 推送内容中是否需要替换玩家名称
	%% 1、替换
	%% 0、不需要
	describe_Name,
	%% 推送开关分组
	%% 0.不纳入开关控制，默认为推送开启
	%% 1.通用推送
	%% 2.活动推送
	%% 参数1：开关类型
	%% 参数2：分组，同组的受一个开关控制且显示一条文字（读取第一条的），不纳入开关及活动类型均填0且不受参数2影响控制
	%% 参数3：0为开关默认关闭。1为默认打开。（参数1=1时参数2同一组的开关读取第一条即可）
	%% D3，没有该功能，但字段保留
	switch,
	%% 通用推送开关文字
	%% 仅通用推送开关组使用，对应开关组有多条推送时，读取第一条的即可
	%% D3，没有该功能，但字段保留
	switchText
}).

